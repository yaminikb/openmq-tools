#!groovy

pipeline {
    agent {
        docker { image 'maven:3.5.3-jdk-8-slim' }
    }
    stages {
        stage('Checkout'){
            steps {
                checkout scm
            }
        }


       stage('Setup') {
            steps {
                 sh 'uname -a'
                 sh 'cat /etc/issue'
                 sh 'apt-get update && apt-get -qq -y install wget ant'
                 sh 'ant -version'
             }
        }
        
/*
        stage('BuildMQ') {
            steps {
                git url: 'https://github.com/eclipse-ee4j/openmq.git'
                sh 'cd mq/src/buildcfg/tools/ri/fscontext; jar cf fscontext.jar -C fscontext_jar .'
                sh 'cd mq/src/share/help; jar cf helpfiles.zip -C helpfiles .'
                sh 'mvn --version'
                sh 'mvn -f mq/pom.xml clean install'
            }
        }  
        stage('BackupMQBits') {
            steps {
                stash includes: 'mq/dist/bundles/mq*.zip', name: 'zips'
            }
        }
*/
        
        stage('RunJMSDevTests') {
            steps {
                parallel (
                    "JMSDev1" : {
                        dir('tools') {
                            git url: 'https://github.com/yaminikb/openmq-tools.git'
                        }
                
                        git url: 'https://github.com/javaee/glassfish.git'
                        sh 'mkdir -p appserver/tests/appserv-tests/devtests/'
                        sh 'svn export https://github.com/javaee/glassfish/trunk/appserver/tests/appserv-tests/config appserver/tests/appserv-tests/devtests/config'
                        sh 'svn export https://github.com/javaee/glassfish/trunk/appserver/tests/appserv-tests/devtests/jms appserver/tests/appserv-tests/devtests/jms'
                        sh "chmod +x ${env.WORKSPACE}/tools/scripts/jms-dev-tests.sh"
                        sh "${env.WORKSPACE}/tools/scripts/jms-dev-tests.sh"
                    },
                    "JMSDev2" : {
                        sh 'echo $PWD'
                        sh 'ls'
                    }
                )
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'appserver/tests/appserv-tests/devtests/jms/*.output', fingerprint: true
//          appserver/tests/appserv-tests/devtests/jms/count.txt,glassfish5/glassfish/domains/domain1/*
            deleteDir()
        }
    }

}




